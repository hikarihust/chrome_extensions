{
	"name": "ChangeText",
	"version": "1.2",
	"description": "Build an Extension! ChangeText",
	"manifest_version": 2,

	"content_scripts": [
		{
			"matches": ["<all_urls>"], 
			"css": ["css/myStyles.css"],
			"js": [
				"js/libs/jquery.js",
				"js/content.js"
			]
		}
	],

	"background": {
		"scripts": ["js/background.js"],
		"persistent": false
	},
	
	"browser_action": {
		"default_icon": {                    
            "16": "images/icon_16.png"        
		},
		"default_title": "Change Text",
		"default_popup": "popup.html" 
	}
}